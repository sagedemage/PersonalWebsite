---
import { Image } from "astro:assets";
import linkedin from "../assets/icons/linkedin.webp";
import github from "../assets/icons/github.webp";
---

<!-- Navbar -->
<div class="navbar bg-base-100 shadow-sm bg-cornflower-blue fixed">
  <div class="navbar-start">
    <div class="dropdown">
      <div
        tabindex="0"
        role="button"
        class="btn btn-ghost btn-circle"
        aria-label="hamburger-menu"
      >
        <svg
          xmlns="http://www.w3.org/2000/svg"
          class="h-5 w-5"
          fill="none"
          viewBox="0 0 24 24"
          stroke="currentColor"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M4 6h16M4 12h16M4 18h7"></path>
        </svg>
      </div>
      <ul
        tabindex="0"
        class="menu menu-sm dropdown-content bg-base-100 rounded-box z-1 mt-3 w-52 p-2 shadow bg-cornflower-blue"
      >
        <li>
          <a class="!text-gray-900" href="/PersonalWebsite"> Home </a>
        </li>
        <li>
          <a class="!text-gray-900" href="/PersonalWebsite/projects">
            Projects
          </a>
        </li>
      </ul>
    </div>
    <a class="btn btn-ghost text-xl !text-gray-900" href="/PersonalWebsite">
      Salmaan Saeed
    </a>
  </div>
  <div class="navbar-center"></div>
  <div class="navbar-end">
    <a target="_blank" href="https://github.com/sagedemage">
      <Image
        class="ml-0.5 mr-0.5 float-left"
        src={github}
        alt="my github profile"
        layout="constrained"
        width={35}
        height={35}
      />
    </a>

    <a
      target="_blank"
      href="https://www.linkedin.com/in/salmaan-saeed-6a5582197/"
    >
      <Image
        class="ml-0.5 mr-0.5 float-left"
        src={linkedin}
        alt="my linkedin profile"
        layout="constrained"
        width={35}
        height={35}
      />
    </a>
  </div>
</div>
