---
export interface Props {
	title: string;
}

const { title } = Astro.props;

import Navbar from 'src/components/Navbar.astro';
---

<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.ico" />
		<meta name="description" content="Salmaan's Personal Website">
		<meta name="generator" content={Astro.generator} />
		<!--
		<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-KK94CHFLLe+nY2dmCWGMq91rCGa5gtU4mk92HdvYe+M/SXH301p5ILy+dN9+nJOZ" crossorigin="anonymous">
		-->
		<title>{title}</title>
	</head>
	<body>
		<!-- Navbar -->
		<Navbar />
		<div class="mt-24">
			<slot />
		</div>
		<footer class="h-28 mt-auto pt-5 border-t border-gray-light text-center">
			<p> &copy; {(new Date().getFullYear())} Salmaan Saeed </p>
		</footer>
	</body>
</html>
<style is:global>
	@tailwind base;
	@tailwind components;
	@tailwind utilities;

	html {
		font-family: Arial, Roboto, Helvetica, Segoe UI, Oxygen, Ubuntu, Cantarell, 
		Fira Sans, Droid Sans sans-serif, -apple-system, BlinkMacSystemFont;
		-webkit-font-smoothing: antialiased;
    	-moz-osx-font-smoothing: grayscale;
		font-size: 1.1em;
	}
	body {
		flex-direction: column;
		min-height: 100vh;
    	display: flex;
	}
	main {
    	margin-right: 16%;
    	margin-left: 16%;
	}
	.icon_link {
		margin-left: 1%;
	}
	.scale_image {
		max-width: 50%;
		height: auto;
	}
	.mb {
		margin-bottom: 100px;
	}
	.bg-myGreen {
    	background-color: SeaGreen;
	}
	h1 {
		font-weight: bold;
		font-size: 2em;
	}
	h2 {
		font-weight: bold;
	}
	/* mobile portrait layout */
	@media only screen and (max-width: 479px) {
		.scale_image {
			max-width: 100%;
			height: auto;
		}
	}

	/* tablet portrait layout */
	@media only screen and (min-width: 481px) and (max-width: 768px)  { 
		.scale_image {
			max-width: 100%;
			height: auto;
		}
	}

	/* small screens and laptop layout */
	@media only screen and (min-width: 769px) and (max-width: 1024px) {
		.scale_image {
			max-width: 80%;
			height: auto;
		}
	}
</style>
