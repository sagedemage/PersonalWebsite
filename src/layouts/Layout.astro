---
export interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/x-icon" href="/PersonalWebsite/favicon.ico" />
    <meta name="description" content="Salmaan's Personal Website" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <!-- Navbar -->
    <div class="p-4 bg-sea-green mb-10">
      <span class="normal-case text-lg font-bold ml-4">
        Salmaan Saeed
      </span>
    </div>
    <main class="mx-[16%]">
      <slot />
    </main>
    <footer class="h-28 mt-8 pt-5 border-t border-gray-light text-center">
      <p>&copy; {new Date().getFullYear()} Salmaan Saeed</p>
    </footer>
  </body>
</html>
<style is:global>
  @tailwind base;
  @tailwind components;
  @tailwind utilities;

  html {
    font-family: Arial, Roboto, Helvetica, Segoe UI, Oxygen, Ubuntu, Cantarell,
      Fira Sans, Droid Sans sans-serif, -apple-system, BlinkMacSystemFont;
    -webkit-font-smoothing: antialiased;
    -moz-osx-font-smoothing: grayscale;
    font-size: 1.1em;
  }
  body {
    flex-direction: column;
    min-height: 100vh;
    display: flex;
  }
</style>
