---
import Layout from 'src/layouts/Layout.astro';
---

<Layout title="Salmaan Saeed">
	<main>
        <h1>404 Page Not Found</h1>
        <p> 
            The page was not found, <a href="/">click here</a> to go back to the home page. 
        </p>
	</main>
</Layout>

<style>
	#profile {
		display: grid;
		justify-content: center;
		grid-template-columns: 23% 23%;
		grid-column-gap: 18%;
		margin-bottom: 25px;
	}

	#profile_title {
		font-size: 1.75em;
		font-weight: bold;
	}

	#profile_info {
		text-align: center;
	}
	#profile_image {
		display: block;
		max-width: 100%;
		height: auto;
		margin-right: auto;
		margin-left: auto;
	}

	.profile_text {
		font-size: 1.1em;
	}

	#profile_links {
		padding-bottom: 40px;
	 }
	  
	.profile_icon {
		margin-left: 2.5%;
		margin-right: 2.5%;
	}

	div.hr {
		background-color: white;
		clear: both;
		margin-bottom: 20px;
	}

	#sub_title {
		font-size: 1.5em;
		font-weight: bold;
		padding-bottom: 10px;
		border-bottom: 2px solid #D5D5D5;
	}

	.skill {
		border-bottom: 1px solid #D5D5D5;
		padding-bottom: 10px;
	}

	.skill_item {
		font-weight: bold;
	}

	.icon-link {
		text-decoration: none;
	}

	/* mobile portrait layout */
	@media only screen and (max-width: 479px) {
		#profile {
			grid-template-columns: auto;
		}
		#profile_image {
			max-width: 100%;
		}
	}

	/* tablet portrait layout */
	@media only screen and (min-width: 481px) and (max-width: 768px) {
		#profile {
			grid-template-columns: auto;
		}
		#profile_image {
			max-width: 50%;
		}
	}

	/* small screens and laptop layout */
	@media only screen and (min-width: 769px) and (max-width: 1024px) {
		#profile {
			grid-template-columns: auto;
		}
		#profile_image {
			max-width: 50%;
		}
	}
</style>
