</Layout>

<style>
	#profile {
		display: grid;
		justify-content: center;
		grid-template-columns: 23% 23%;
		grid-column-gap: 18%;
		margin-bottom: 25px;
	}

	#profile_title {
		font-size: 1.75em;
		font-weight: bold;
	}

	#profile_info {
		text-align: center;
	}
	#profile_image {
		display: block;
		max-width: 100%;
		height: auto;
		margin-right: auto;
		margin-left: auto;
	}

	#profile_links {
		padding-bottom: 40px;
	 }
	  
	.profile_icon {
		margin-left: 2px;
		margin-right: 2px;
	}

	.icon-link {
		text-decoration: none;
	}

	/* mobile portrait layout */
	@media only screen and (max-width: 479px) {
		#profile {
			grid-template-columns: auto;
		}
		#profile_image {
			max-width: 100%;
		}
	}

	/* tablet portrait layout */
	@media only screen and (min-width: 481px) and (max-width: 768px) {
		#profile {
			grid-template-columns: auto;
		}
		#profile_image {
			max-width: 100%;
		}
	}

	/* small screens and laptop layout */
	@media only screen and (min-width: 769px) and (max-width: 1024px) {
		#profile {
			grid-template-columns: auto;
		}
		#profile_image {
			max-width: 100%;
		}
	}
</style>

