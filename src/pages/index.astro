import email from 'assets/icons/email.webp';
---

<Layout title="Salmaan Saeed">
	<main>
		<div id="profile">
			<div id="profile_info">
				<p id="profile_title"> Salmaan Saeed </p>
				<p class="profile_text"> 
					Undergraduate Student <br /> at NJIT 
				</p>
				<p class="profile_text">
					<a href="mailto: ss3994@njit.edu"> 
						ss3994@njit.edu 
					</a>
				</p>
				<p class="profile_text"> 
					Contact & Profiles: 
				</p>
				<div id="profile_links">
					<a target="_blank" 
						href="mailto: ss3994@njit.edu" class="icon-link">
						<img class="profile_icon" 
							src={email}
							alt="my school email" 
							width="50" height="36" 
						/>
			    	</a>
			    	<a target="_blank" 
						href="https://github.com/sagedemage" class="icon-link">
				    	<img class="profile_icon" 
							src={github} alt="my github page"
							width="36" height="36" 
						/>
			    	</a>
			    	<a target="_blank" 
						href="https://www.linkedin.com/in/salmaan-saeed-6a5582197/" class="icon-link">
				    	<img class="profile_icon" 
							src={linkedin} 
							alt="my linkedin page" 
							width="36" height="36" 
						/>
			    	</a>
